{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "soundlab",
	"version": "0.1.0",
	"identifier": "com.soundlab.app",
	"build": {
		"beforeDevCommand": "pnpm dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "pnpm build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "SoundLab",
				"width": 800,
				"height": 600,
				"decorations": false,
				"minHeight": 800,
				"minWidth": 450
			}
		],
		"security": {
			"csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: https: http: data: http://asset.localhost; media-src 'self' asset: blob: http://asset.localhost http://tauri.localhost; style-src 'self' 'unsafe-inline'",
			"assetProtocol": {
				"enable": true,
				"scope": ["**"]
			}
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
